<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_backround"
    android:orientation="vertical" >
    
    
     <RelativeLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >
    
    <ImageView 
        android:id="@+id/main_logo"
        android:layout_height="80dp"
        android:layout_width="fill_parent"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:src="@drawable/wizkid"/>
    <TextView 
        android:id="@+id/txtEmail_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/main_logo"
        android:textSize="@dimen/screen_pixel_16"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:text="Please Enter your OTP Below"/>
    
    <EditText 
        android:id="@+id/passwordtext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/txtEmail_id"
        android:textColorHint="#ffffff"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_image"
        android:hint="Enter password"/>
    <EditText 
        android:id="@+id/confirmtext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/passwordtext"
        android:textColorHint="#ffffff"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_image"
        android:hint="Confirm password"/>
  
<Button 
    android:id="@+id/confirm_btn"
    android:layout_height="40dp"
    android:layout_width="120dp"
    android:layout_marginTop="10dp"
    android:background="#FE642E"
    android:text="Continue"
    android:textColor="#ffffff"
    android:textSize="@dimen/screen_pixel_14"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/confirmtext"/>
  </RelativeLayout>
    

</LinearLayout>
