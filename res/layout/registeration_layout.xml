<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
     >
     <include layout="@layout/toolbar" />
    <ScrollView 
        
        android:layout_height="match_parent"
        android:layout_width="match_parent">
 
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp" >
   
    
    <TextView 
        android:id="@+id/register_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="Registration Detail"
         android:textSize="@dimen/screen_pixel_16"
        android:layout_gravity="center_horizontal"/>
    <EditText 
        android:id="@+id/firstname_edittext"
        android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_edittext"
        android:hint="FirstName"/>
    <EditText 
        android:id="@+id/lastname_edittext"
         android:layout_height="42dp"
        android:layout_width="fill_parent"
         android:textSize="@dimen/screen_pixel_14"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_edittext"
        android:hint="LastName"/>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    <EditText 
        android:id="@+id/gender_edittext"
         android:layout_height="42dp"
        android:layout_width="160dp"
        android:background="@null"
        android:layout_centerVertical="true"
         android:textSize="@dimen/screen_pixel_14"
        android:hint="Gender"/>
    <ToggleButton
        android:id="@+id/radiobtn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/toggle_selector"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    <Button 
        android:id="@+id/dateofbirth_edittext"
        android:layout_height="42dp"
        android:layout_width="160dp"
        android:background="@null"
         android:textSize="@dimen/screen_pixel_14"
        android:layout_centerVertical="true"
        android:hint="Date of Birth"/>
    <ImageView 
        android:id="@+id/calender_image"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/calender"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    
    <EditText 
        android:id="@+id/email_edittext"
        android:layout_height="42dp"
        android:layout_width="160dp"
        android:background="@null"
         android:textSize="@dimen/screen_pixel_14"
        android:hint="Email Address"/>
     <ImageView 
        android:id="@+id/email_image"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/email"/>
   
    </RelativeLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    
    <EditText 
        android:id="@+id/mobile_edittext"
         android:layout_height="42dp"
        android:layout_width="160dp"
        android:background="@null"
        android:inputType="number"
        android:textSize="@dimen/screen_pixel_14"
        android:hint="Mobile no"/>
    <ImageView 
        android:id="@+id/mobile_image"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/mobile"/>
   
    </RelativeLayout>
    <EditText 
        android:id="@+id/password_edittext"
         android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
         android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_edittext"
        android:hint="Password"/>
    <EditText 
        android:id="@+id/confirm_password_edittext"
        android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
         android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_edittext"
        android:hint="Retype Password"/>
    <EditText 
        android:id="@+id/classname_edittext"
        android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:inputType="number"
         android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_edittext"
        android:hint="Class"/>
   <EditText 
        android:id="@+id/city_edittext"
        android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
         android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_edittext"
        android:hint="City"/>
    
<EditText 
        android:id="@+id/address_edittext"
        android:layout_height="80dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
         android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_edittext"
        android:hint="Address"/>
 <Spinner 
        android:id="@+id/spinStates"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/screen_pixel_14"
        style="?android:attr/spinnerItemStyle"
        android:background="@android:drawable/btn_dropdown"
        />
    
   

<EditText 
        android:id="@+id/pincode_edittext"
         android:layout_height="42dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:inputType="number"
         android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_edittext"
        android:hint="Pincode"/>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent" >
<CheckBox 
    android:id="@+id/checkbox"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginTop="5dp"/>
<TextView 
    android:id="@+id/checkbox_text"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@id/checkbox"
     android:textSize="@dimen/screen_pixel_14"
    android:text="Accept the Terms and condition"/>
</RelativeLayout>
<Button 
    android:id="@+id/register_btn"
    android:layout_height="40dp"
    android:layout_width="120dp"
    android:background="@color/orange"
    android:text="Register"
     android:textSize="@dimen/screen_pixel_14"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center_horizontal"/>
</LinearLayout>
</ScrollView>
</LinearLayout>