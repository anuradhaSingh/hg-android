<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ScrollView 
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        
        
        <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp" >
   <RelativeLayout
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:id="@+id/back_button"
       android:layout_marginTop="10dp" >
    <Button 
        android:id="@+id/btn_back"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:background="@drawable/back_button"/>
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Back"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn_back"/>
    <TextView 
        android:id="@+id/txt_register"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:text="Profile Detail"
        android:textSize="15dp"
        android:layout_centerInParent="true"/>
    
    </RelativeLayout>
    <TextView 
        android:id="@+id/txtview_firstname"
        android:layout_height="38dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_edittext"
        android:text="FirstName"/>
    <TextView 
        android:id="@+id/txtview_secondname"
        android:layout_height="38dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_edittext"
        android:text="LastName"/>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    <TextView 
        android:id="@+id/txtview_gender"
        android:layout_height="38dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:text="Gender"/>
    <ToggleButton
        android:id="@+id/radiobtn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/toggle_selector"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    <TextView 
        android:id="@+id/txtview_dateofbirth"
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@null"
        android:layout_centerVertical="true"
        android:text="Date of Birth"/>
    <ImageView 
        android:id="@+id/img_calender"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/calender"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    
    <TextView 
        android:id="@+id/txt_email"
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@null"
        android:text="Email Address"/>
     <ImageView 
        android:id="@+id/img_email"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/email"/>
   
    </RelativeLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    
    <TextView 
        android:id="@+id/txt_mobileno"
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@null"
        android:text="Mobile no"/>
    <ImageView 
        android:id="@+id/img_mobile"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/mobile"/>
   
    </RelativeLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    
   <TextView 
        android:id="@+id/txt_city"
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@null"
        android:text="City"/>
    
    </RelativeLayout>
    
<TextView 
        android:id="@+id/txt_address"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_edittext"
        android:text="Address"/>
<RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
         android:background="@drawable/rectangle_edittext">
    
   <TextView 
        android:id="@+id/txt_state"
        android:layout_height="38dp"
        android:layout_width="wrap_content"
        android:background="@null"
        android:text="State"/>
    
    
    </RelativeLayout>

<TextView 
        android:id="@+id/txt_pincode"
        android:layout_height="38dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_edittext"
        android:text="Pincode"/>

</LinearLayout>
        
    </ScrollView>

</RelativeLayout>
