<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_backround" >
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:id="@+id/forgot_header"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
         android:src="@drawable/back_button" />
    
    <TextView
        android:id="@+id/datetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/screen_pixel_12"
        android:textStyle="bold" /> 
        
       
</LinearLayout>
    <RelativeLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >
    
    <ImageView 
        android:id="@+id/main_logo"
        android:layout_height="80dp"
        android:layout_width="fill_parent"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:src="@drawable/wizkid"/>
    
    <EditText 
        android:id="@+id/emailtext"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_below="@id/main_logo"
        android:textColorHint="@color/white"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_image"
        android:hint="Enter your Email id"/>
    <TextView 
        android:id="@+id/textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/screen_pixel_14"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emailtext"
        android:textColor="@color/white"
        android:text="Or"/>
    
<EditText 
        android:id="@+id/mobiletext"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_below="@id/textview"
        android:textColorHint="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/screen_pixel_14"
        android:background="@drawable/rectangle_image"
        android:hint="Mobile number"/>
<TextView 
        android:id="@+id/textview2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
       android:textSize="@dimen/screen_pixel_12"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mobiletext"
        android:text="A Password reset instruction will be sent shortly"/>
<Button 
    android:id="@+id/send_btn"
    android:layout_height="40dp"
    android:layout_width="100dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/textview2"
    android:layout_marginTop="10dp"
    android:textSize="@dimen/screen_pixel_14"
    android:textColor="@color/white"
    android:background="@color/orange"
    android:text="Send"/>
    </RelativeLayout>
</LinearLayout>
