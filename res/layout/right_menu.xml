<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:background="@drawable/home_backround"
    android:orientation="vertical" >
<ImageView 
            android:id="@+id/main_image"
            android:layout_height="80dp"
            android:layout_width="260dp"
            android:scaleType="fitXY"
            
             android:src="@drawable/wizkid"/>
 <LinearLayout
            android:layout_width="260dp"
            android:layout_height="fill_parent"
           android:orientation="vertical" >
 <LinearLayout android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:orientation="horizontal">
     
      <ImageView 
        android:id="@+id/startTest_image"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/start_test_icon"/>
       <TextView
        android:id="@+id/text_startTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/start_test"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/screen_pixel_12"
        android:textColor="@color/black" />
      
 </LinearLayout>
    <View
android:background="@color/orange"
android:layout_width="220dp"
android:layout_margin="5dp"
android:layout_height="1dp"
></View>
    <LinearLayout android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:orientation="horizontal">
     
      <ImageView 
        android:id="@+id/img_scholarship"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/myscholarship_icon"/>
       <TextView
        android:id="@+id/txt_scholarship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/scholarship"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/screen_pixel_12"
        android:textColor="@color/black" />
      
 </LinearLayout>
    <View
android:background="@color/orange"
android:layout_width="220dp"
android:layout_margin="5dp"
android:layout_height="1dp"
></View>
    <LinearLayout android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:orientation="horizontal">
     
      <ImageView 
        android:id="@+id/img_scoreCard"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/score_card"/>
       <TextView
        android:id="@+id/txt_scoreCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/score_card"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/screen_pixel_12"
        android:textColor="@color/black" />
      
 </LinearLayout>
    <View
android:background="@color/orange"
android:layout_width="220dp"
android:layout_margin="5dp"
android:layout_height="1dp"
></View>
    <LinearLayout android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:id="@+id/profile_view"
     android:layout_marginLeft="10dp"
     android:orientation="horizontal">
     
      <ImageView 
        android:id="@+id/img_profile"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/profile"/>
       <TextView
        android:id="@+id/txt_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/profile"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/screen_pixel_12"
        android:textColor="@color/black" />
      
 </LinearLayout>
    <View
android:background="@color/orange"
android:layout_width="220dp"
android:layout_margin="5dp"
android:layout_height="1dp"
></View>
    <LinearLayout android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:orientation="horizontal">
     
      <ImageView 
        android:id="@+id/img_plans"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/plans"/>
       <TextView
        android:id="@+id/txt_plans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/plans"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/screen_pixel_12"
        android:textColor="@color/black" />
      
 </LinearLayout>
    <View
android:background="@color/orange"
android:layout_width="220dp"
android:layout_margin="5dp"
android:layout_height="1dp"
></View>
    <LinearLayout android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:orientation="horizontal">
     
      <ImageView 
        android:id="@+id/img_contactUs"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/contact_us"/>
       <TextView
        android:id="@+id/txt_contactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/contact_us"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/screen_pixel_12"
        android:textColor="@color/black" />
      
 </LinearLayout>
    <View
android:background="@color/orange"
android:layout_width="220dp"
android:layout_margin="5dp"
android:layout_height="1dp"
></View>
    <LinearLayout android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:orientation="horizontal">
     
      <ImageView 
        android:id="@+id/img_referFriend"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:src="@drawable/reffer_friend"/>
       <TextView
        android:id="@+id/txt_referFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/refer_friend"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/screen_pixel_12"
        android:textColor="@color/black" />
      
 </LinearLayout>
    <View
android:background="@color/orange"
android:layout_width="220dp"
android:layout_margin="5dp"
android:layout_height="1dp"
></View>
    </LinearLayout>

</LinearLayout>